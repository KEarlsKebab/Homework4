
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 500,
  "width": 500,
  "title": "Distance and Establishments",
  "data": {
    "url": "https://raw.githubusercontent.com/KEarlsKebab/3179/refs/heads/main/data/VicNatParks.csv"
  },
  "params": [{
    "name": "Area_selection",
    "value": 10000,
    "bind": {
      "input": "range",
      "min": 0,
      "max": 600000,
      "step": 1000,
      "name": "Minimum Area"
    }
  }],
  "mark": {"type":"circle"},
  "encoding": {
    "x": {
      "field": "Year",
      "timeUnit":"year",
      "type": "temporal",
      "title":"Year Established",
      "axis": {"tickCount": 7},
      "scale": {"domain":[1890, 2020]}
    },
    "y": {
      "field": "Melbourne_Distance",
      "type": "quantitative",
      "axis": { "tickCount": 6},
      "title":"Distance From Melbournce (km)",
      "scale": {"domain": [0,500]}
    },
    "size": {"field": "Area_Ha", "type": "quantitative", "scale": {"type": "threshold",
"domain": [1000, 10000, 100000, 300000, 600000], "range": [50, 100, 200, 500, 750, 1000]},
"legend": {"format": ".1s"}},
    "color": {"field": "Type", "type": "nominal"},
    "opacity": {
      "condition": {"test": "datum.Area_Ha >= Area_selection", "value": 0.8},
      "value": 0.1
    },
  "tooltip":[{"field":"Name"},{"field":"Area_Ha"},
  {"field":"Melbourne_Distance", "title":"Distance to CBD (km)"},
  {"field":"Year"}]
  }
}
